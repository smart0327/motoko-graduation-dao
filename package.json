{
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "name": "dao",
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "prebuild": "npm run prebuild --workspaces --if-present",
    "pretest": "npm run prebuild --workspaces --if-present",
    "start": "npm start --workspaces --if-present",
    "build:dao": "dfx generate dao && dfx build dao --check",
    "test:dao": "vitest run -c ./src/dao/tests/vitest.config.ts",
    "e2e-test:dao": "vitest run -c ./src/dao/e2e-tests/vitest.config.ts"
  },
  "type": "module",
  "workspaces": [
    "src/dao/tests",
    "src/dao/e2e-tests",
    "src/webpage"
  ],
  "devDependencies": {
    "@dfinity/agent": "^1.0.1",
    "@dfinity/candid": "^1.0.1",
    "@dfinity/identity": "^1.0.1",
    "@dfinity/principal": "^1.0.1",
    "@hadronous/pic": "^0.8.1",
    "vitest": "^2.0.5"
  }
}
